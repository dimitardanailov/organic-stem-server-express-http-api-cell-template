{
  "plasma": {
    "organic-api-routes": {
      "source": "organic-express-routes",
      "reactOn": ["ExpressServer"],
      "pattern": "/**/*.js",
      "path": "server/cells/{{{cell-name}}}/routes",
      "helpers": "server/cells/{{{cell-name}}}/route-helpers",
      "emitReady": "ApiRoutesReady"
    },
    "organic-express-response": {
      "source": "organic-express-response",
      "reactOn": ["ExpressServer", "ApiRoutesReady"]
    }
  },
  "membrane": {
    "console": {
      "source": "organic-console",
      "emitEvery": {
        "type": "console"
      }
    },
    "bunyan-output": {
      "source": "organic-bunyan-output",
      "reactOn": "console",
      "bunyan": {
        "name": "master"
      }
    },
    "organic-express-server": {
      "source": "organic-express-server",
      "forceConnectionsDestroyOnClose": true,
      "port": "@server.cell-ports.{{{cell-name}}}",
      "initScript": "server/cells/{{{cell-name}}}/init-express-app.js",
      "emitReady": "ExpressServer",
      "responders": ["server/cells/{{{cell-name}}}/responders/default"],
      "expressSetupDoneOnce": [
        "ExpressServer",
        "ApiRoutesReady"
      ]
    }
  }
}

{
  "organic-api-routes": {
    "source": "organic-express-routes",
    "reactOn": ["ExpressServer"],
    "pattern": "/**/*.js",
    "path": "cells/{{{cell-name}}}/routes",
    "helpers": "cells/{{{cell-name}}}/route-helpers",
    "emitReady": "ApiRoutesReady"
  },
  "organic-express-server": {
    "source": "organic-express-server",
    "forceConnectionsDestroyOnClose": true,
    "port": "@cell-ports.{{{cell-name}}}",
    "emitReady": "ExpressServer",
    "initScript": "cells/{{{cell-name}}}/init-express-app.js",

    "interceptors": ["cells/{{{cell-name}}}/interceptors/packagejson"],
    "responders": ["cells/{{{cell-name}}}/responders/default"],
    "views": false,
    "uploadsDir": false,
    "cookie_secret": false,
    "mountRespondersOn": [
      "ExpressServer",
      "ApiRoutesReady"
    ]
  }
}
